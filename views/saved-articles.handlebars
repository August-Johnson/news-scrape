<div id="saved-articles-background">
    <h1>Saved Articles</h1>
    <h2>Your Saved Articles</h2>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="article-notes"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div class="container" id="saved-articles-container">
    {{#each savedArticle}}

    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-7 col-xl-7">
                    <h5>{{title}}</h5>
                </div>
                <div class="col-6 col-sm-6 col-md-6 col-lg-2 col-xl-2">
                    <button class="btn btn-success add-article-note" data-toggle="modal" data-target="#myModal"
                        data-article-id="{{_id}}">ARTICLE NOTES</button>
                </div>
                <div class="col-6 col-sm-6 col-md-6 col-lg-3 col-xl-3">
                    <button class="btn btn-danger delete-article" data-article-id="{{_id}}">DELETE FROM
                        SAVED</button>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card-body">
                    <p class="card-text">{{summary}}</p>
                </div>
            </div>
        </div>
    </div>

    {{/each}}
</div>