{{!-- Navbar --}}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">

    <h1>Mongo Scraper</h1>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <a class="nav-link active" href="/" id="home-articles">Home <span class="sr-only">(current)</span></a>
        <a class="nav-link" href="/saved" id="saved-articles">Saved Articles</a>
        <a class="nav-link"><button type="button" class="btn btn-danger" id="scrape-articles">SCRAPE NEW
                ARTICLES!</button></a>

    </div>
</nav>

<div id="home-page-background">
    <h1>Mongo Scraper</h1>
    <h2>New York Times Edition</h2>
</div>

{{!-- Div for all scraped articles --}}
<div class="container" id="articles-container">
    {{!-- Looping through each article that has not been saved by the user, and creating a Bootstrap card for each one --}}
    {{#each article}}
    {{#unless saved}}

    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-8">
                    <h5>{{title}}</h5>
                </div>
                <div class="col-4 col-sm-4 col-md-3 col-lg-2 col-xl-2">
                    <button class="btn btn-success save-article" data-article-id="{{_id}}">SAVE ARTICLE</button>
                </div>
                <div class="col-4 col-sm-4 col-md-3 col-lg-2 col-xl-2">
                    <a href="{{link}}" target="_blank"><button class="btn btn-secondary">VIEW ARTICLE</button></a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card-body">
                    <p class="card-text">{{summary}}</p>
                </div>
            </div>
        </div>
    </div>

    {{/unless}}
    {{/each}}
</div>